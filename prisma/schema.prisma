generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model HeroContent {
  id              String   @id @default(cuid())
  badges          Json
  typewriterTexts Json
  description     String   @db.Text
  productImage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("hero_contents")
}

model AboutContent {
  id        String   @id @default(cuid())
  tagline   String
  heading   String
  body      String   @db.Text
  stats     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("about_contents")
}

model WhyChooseContent {
  id        String   @id @default(cuid())
  heading   String
  title     String
  criteria  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("why_choose_contents")
}

model TestimonialContent {
  id           String   @id @default(cuid())
  heading      String
  title        String
  testimonials Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("testimonial_contents")
}

model PartnershipContent {
  id           String   @id @default(cuid())
  heading      String
  title        String
  partnerships Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("partnership_contents")
}

model ArticleContent {
  id          String   @id @default(cuid())
  heading     String
  title       String
  description String   @db.Text
  articles    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("article_contents")
}

model Settings {
  id           String   @id @default(cuid())
  siteName     String   @default("Zari Honey")
  whatsapp     String   @default("+6285777578827")
  instagram    String   @default("https://www.instagram.com/zarihoney")
  email        String   @default("info@zarilife.com")
  shopeeLink   String   @default("https://id.shp.ee/GgH8AKs")
  mapsLocation String   @default("https://maps.app.goo.gl/Yfnw3MHWgm2YPEeU8")
  mapsEmbed    String   @db.Text
  whatsappOrderMessage String? @db.Text
  whatsappResellerMessage String? @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("settings")
}

model PremiumHoneyCollection {
  id          String   @id @default(cuid())
  honeyCollectionContentId String?
  name        String
  description String   @db.Text
  price       String?
  image       String?  @db.VarChar(500)
  label       String?
  features    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  honeyCollectionContent HoneyCollectionContent? @relation(fields: [honeyCollectionContentId], references: [id], onDelete: Cascade)

  @@map("premium_honey_collections")
}

model HoneyCollectionContent {
  id          String   @id @default(cuid())
  title       String   @default("Produk Premium Kami")
  description String   @default("Pilihan terbaik dari berbagai sumber nektar pilihan Indonesia")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  products    PremiumHoneyCollection[]

  @@map("honey_collection_contents")
}
