generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model HeroContent {
  id              String   @id @default(cuid())
  badges          Json
  typewriterTexts Json
  description     String   @db.Text
  productImage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("hero_contents")
}
