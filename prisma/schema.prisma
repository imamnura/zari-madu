generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model HeroContent {
  id              String   @id @default(cuid())
  badges          Json
  typewriterTexts Json
  description     String   @db.Text
  productImage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("hero_contents")
}

model AboutContent {
  id          String   @id @default(cuid())
  tagline     String
  heading     String
  body        String   @db.Text
  stats       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("about_contents")
}

model WhyChooseContent {
  id          String   @id @default(cuid())
  heading     String
  title       String
  criteria    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("why_choose_contents")
}

model TestimonialContent {
  id           String   @id @default(cuid())
  heading      String
  title        String
  testimonials Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("testimonial_contents")
}
